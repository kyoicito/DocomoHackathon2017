<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:weightSum="1">


    <FrameLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="236dp"
                app:srcCompat="@drawable/title"
                android:id="@+id/imageView2"
                android:layout_weight="0.37" />

            <LinearLayout
                android:gravity="center|center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_weight="0.54"
                android:weightSum="1">

                <ImageButton
                    android:background="@null"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/top_button_mikke"
                    android:id="@+id/findButton"
                    android:elevation="0dp"
                    android:backgroundTint="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="0.36" />

                <Space
                    android:layout_width="28dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:background="@null"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/top_button_zukan"
                    android:id="@+id/pediaButton"
                    android:elevation="0dp"
                    android:backgroundTint="@null"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:weightSum="1">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65" />

                <ImageButton
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/top_button_question"
                    android:id="@+id/questionButton"
                    android:layout_weight="0.22"
                    android:elevation="0dp"
                    android:backgroundTint="@null"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:background="@null"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/top_button_ranking"
                    android:id="@+id/rankingButton"
                    android:elevation="0dp"
                    android:backgroundTint="@null"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>